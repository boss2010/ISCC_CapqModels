										<div class="mb-3">
											<label class="form-label fw-bold">ملاحظات</label>
											<textarea id="@textareaId" class="form-control" rows="3" placeholder="اكتب ملاحظاتك هنا..." @(int.Parse(ViewBag.ISAdmin) == 0 ? "readonly" : "")></textarea>
